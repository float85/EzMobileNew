<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyLightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--bg Toolbar-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--bg tren toolbar-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--color text-->
        <item name="android:textColor">@color/black</item>
        <!--theme-->
        <item name="android:windowBackground">@color/colorBackground</item>
        <!--Tranh loi-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--bg tab layout-->
        <item name="selectableItemBackground">@color/white</item>
        <!--mau nen menu-->
        <item name="android:itemBackground">@color/colorBackground</item>

    </style>

    <style name="Theme.MyDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--bg Toolbar-->
        <item name="colorPrimary">#0b1016</item>
        <!--bg tren toolbar-->
        <item name="colorPrimaryDark">#000000</item>
        <!--color text-->
        <item name="android:textColor">@color/white</item>
        <!--theme-->
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <!--Tranh loi-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--bg tab layout-->
        <item name="selectableItemBackground">@color/black</item>
        <!--mau nen menu-->
        <item name="android:itemBackground">@color/colorBackgroundDark</item>

    </style>


    <style name="FreeSansFontTextAppearance" parent="Base.TextAppearance.AppCompat.Title">
        <!--<item name="android:fontFamily">@font/free_sans</item>-->
        <item name="fontFamily">@font/free_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:subtitleTextStyle">@style/FreeSansFontSubTextAppearance</item>
    </style>

    <style name="FreeSansFontSubTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/free_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
