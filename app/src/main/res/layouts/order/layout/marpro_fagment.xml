<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTextBuying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:text="@string/order_basic_buying_power" />

                        <TextView
                            android:id="@+id/tvMoneyBuying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTextRemainingCreditLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_remaining_credit_line" />

                        <TextView
                            android:id="@+id/tvRemainingCreditLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln1"
                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMaCK"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/order_securities_symbol" />

                        <EditText
                            android:id="@+id/etTradingSymbol"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@id/tvMaCK"
                            android:background="@drawable/edittext_custom"
                            android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="@string/order_securities_symbol"
                            android:imeOptions="actionDone"
                            android:maxLength="9"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true" />

                        <Button
                            android:id="@+id/btnSymbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="Số dư CK" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvNameCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center"
                            android:text="@string/watchlist_ceil" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center"
                            android:text="@string/watchlist_ref" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center"
                            android:text="@string/watchlist_floor" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center"
                            android:text="@string/order_buy1" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="21dp"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center"
                            android:text="@string/watchlist_last" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center"
                            android:text="@string/order_sell1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvCeil"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvRefPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center"

                            />

                        <TextView
                            android:id="@+id/tvFloor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvBuy1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvMatching"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tvSell1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="#b1afaf"
                            android:gravity="center" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vOder"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ln2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/order_buy_sell" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mua" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_product_type" />

                            <TextView
                                android:id="@+id/tvTLV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="(TLV)" />
                        </LinearLayout>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="MarPro" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/order_quantity" />

                            <TextView
                                android:id="@+id/tvMaxVol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="(Max)" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/etVol"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/edittext_custom"
                                android:gravity="center"
                                android:hint="@string/order_quantity"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="12"
                                android:singleLine="true" />

                            <ImageButton
                                android:id="@+id/imgBackQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_before_black" />

                            <ImageButton
                                android:id="@+id/imgNextQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_next_black" />

                            <Button
                                android:id="@+id/tvFocusableQuantity"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorHinEditText" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/order_price" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/etPrice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittext_custom"
                                android:gravity="center"
                                android:hint="@string/order_price_01"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="6"
                                android:singleLine="true" />

                            <ImageButton
                                android:id="@+id/imgBackPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_before_black" />

                            <ImageButton
                                android:id="@+id/imgNextPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_next_black" />

                            <Button
                                android:id="@+id/tvFocusablePrice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorHinEditText" />

                        </RelativeLayout>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvOrderType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        tools:listitem="@layout/item_ordertype" />

                    <LinearLayout
                        android:id="@+id/vCashBuy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/order_cashbuy" />

                        <TextView
                            android:id="@+id/tvCashBuy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/Black" />
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/order_trading_password" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/etPass"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_custom"
                                android:gravity="center"
                                android:hint="******"
                                android:inputType="textPassword"
                                android:maxLines="20"
                                android:singleLine="true" />

                            <Button
                                android:id="@+id/tvFocusablePass"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorHinEditText" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnConfig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:clickable="false"
                        android:text="@string/order_confirm"
                        android:textColor="@color/colorHintBtn" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

        </RelativeLayout>

    </ScrollView>
</layout>